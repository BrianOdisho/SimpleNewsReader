<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_min_vertical_margin"
    android:layout_marginTop="@dimen/activity_min_vertical_margin"
    android:background="?attr/selectableItemBackground"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_item_article"
            android:layout_width="match_parent"
            android:layout_height="@dimen/news_article_card_image_height"
            android:layout_marginBottom="@dimen/activity_half_vertical_margin"
            android:scaleType="centerCrop"
            tools:src="@drawable/sample" />

        <TextView
            android:id="@+id/text_item_article_title"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_item_article"
            android:layout_marginBottom="@dimen/activity_min_vertical_margin"
            android:layout_marginLeft="@dimen/activity_half_horizontal_margin"
            android:layout_marginRight="@dimen/activity_half_horizontal_margin"
            android:ellipsize="end"
            android:maxLines="2"
            android:textStyle="bold"
            tools:text="Microsoft teases yet another Surface announcement on May 23" />

        <TextView
            android:id="@+id/text_item_article_date"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_item_article_title"
            android:layout_marginBottom="@dimen/activity_half_vertical_margin"
            android:layout_marginEnd="@dimen/activity_min_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_half_horizontal_margin"
            android:layout_marginRight="@dimen/activity_min_horizontal_margin"
            android:layout_marginStart="@dimen/activity_half_horizontal_margin"
            android:textStyle="italic"
            tools:text="14 hours ago by" />

        <TextView
            android:id="@+id/text_item_article_author"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_item_article_title"
            android:layout_marginBottom="@dimen/activity_half_vertical_margin"
            android:layout_marginEnd="@dimen/activity_half_horizontal_margin"
            android:layout_marginRight="@dimen/activity_half_horizontal_margin"
            android:layout_toEndOf="@id/text_item_article_date"
            android:layout_toRightOf="@id/text_item_article_date"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorAccent"
            android:textStyle="italic|bold"
            tools:text="Brian Odisho" />

        <CheckBox
            android:id="@+id/checkbox_item_article_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_item_article_date"
            android:layout_marginBottom="@dimen/activity_half_vertical_margin"
            android:layout_marginLeft="@dimen/activity_half_horizontal_margin"
            android:layout_marginStart="@dimen/activity_half_horizontal_margin"
            android:layout_toLeftOf="@+id/button_item_article_share"
            android:layout_toStartOf="@+id/button_item_article_share"
            android:button="@drawable/selector_bookmark" />

        <ImageButton
            android:id="@+id/button_item_article_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/checkbox_item_article_bookmark"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/activity_half_horizontal_margin"
            android:layout_marginRight="@dimen/activity_half_horizontal_margin"
            android:background="?attr/selectableItemBackground"
            android:tint="@color/colorAccent"
            app:srcCompat="@drawable/ic_share" />

    </RelativeLayout>

</android.support.v7.widget.CardView>


